<!-- Company details page -->

<h1> <%=@company["name"] %> </h1>

<h2> <%=@company["city"] %>,  <%=@company["state"] %></h2>

<h3>Contacts</h3>

<%= contacts = Contact.where({"company_id" => @company["id"]) %>

<ul>
  <%= for contact in contacts %>
  <li>
    <%= contact["first_name"] %> 
    <%= contact["last_name"] %> 
  </li>
  <%= end %>
</ul>

<p>
  <a href="/contacts/new?company_id">New Contact</a>
</p>

<p>
  <a href="/companies">Back to All Companies</a>
</p>